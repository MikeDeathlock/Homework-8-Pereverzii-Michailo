<%- include('../layout/header.ejs') %>  
<div class="container">
    <div class="row">
        <div class="col">
            <form action="/add-product" method="POST">
                <div class="form-group">
                  <label for="Product">Title</label>
                  <input type="text" class="form-control" name="title" aria-describedby="addProduct">
                </div>
                <div class="form-group">
                    <label for="Price">Price</label>
                    <input type="number" class="form-control" name="price" aria-describedby="addProduct">
                </div>
                <div class="form-group">
                    <label for="Image">Image</label>
                    <input type="text" class="form-control" name="image" aria-describedby="addProduct">
                </div>
                <div class="form-group">
                    <textarea name="description" rows="6" style="width: 100%;"></textarea>
                </div>
                
                <button type="submit" class="btn btn-primary mb-3">Submit</button>
              </form>
        </div>
    </div>
</div>
<%- include('../layout/footer.ejs') %>  