<%- include('../layout/header.ejs') %>
<h1 class="mt-3 mb-3 text-center">Update your Product</h1>  
<div class="container">
    <div class="row">
        <div class="col">
            <form action="/update-product/<%= product.id %>" method="POST">
                <div class="form-group">
                  <label for="Product">Title</label>
                  <input type="text" value="<%= product.title %>" class="form-control" name="title" aria-describedby="updateProduct">
                </div>
                <div class="form-group">
                    <label for="Price">Price</label>
                    <input type="number" value="<%= product.price %>" class="form-control" name="price" aria-describedby="updateProduct">
                </div>
                <div class="form-group">
                    <label for="Image">Image</label>
                    <input type="text" value="<%= product.image %>" class="form-control" name="image" aria-describedby="updateProduct">
                </div>
                <div class="form-group">
                    <textarea name="description" rows="6" style="width: 100%;"><%= product.description %></textarea>
                </div>
                
                <button type="submit" class="btn btn-primary mb-3">Submit</button>
              </form>
        </div>
    </div>
</div>
<%- include('../layout/footer.ejs') %>  